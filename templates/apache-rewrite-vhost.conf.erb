<VirtualHost <%= listen_ip %>:80>
    ServerName <%= service_url %>

    BrowserMatch ".*MSIE.*" nokeepalive ssl-unclean-shutdown downgrade-1.0 force-response-1.0

    RewriteEngine on
    RewriteLogLevel 0
    RewriteLog /var/log/apache2/<%= service_url %>_rewrite.log
    RewriteRule ^.*$ https://%{SERVER_NAME}:3000%{REQUEST_URI} [R,L]
    #ErrorDocument <rewriteerrorcode> FIXME

    <Location />
        Order allow,deny
        Allow from all
    </Location>
</VirtualHost>
